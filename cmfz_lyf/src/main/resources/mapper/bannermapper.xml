<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.baizhi.dao.BannerDao">
	<!-- 分页查询 -->
	<select id="queryByPaging" resultType="com.baizhi.entity.Banner">
		select bannerId,bannerTitle,bannerPath,bannerStatus,bannerCreateTime from cmfz_banner limit ${(page-1)*rows},${rows} 
	</select>
	<!-- 查总数 -->
	<select id="count" resultType="Integer">
		select count(*) from cmfz_banner
	</select>
	<!-- 修改 -->
	<update id="update">
		update cmfz_banner set bannerTitle=#{bannerTitle} ,bannerPath=#{bannerPath},bannerStatus=#{bannerStatus},bannerCreateTime=#{bannerCreateTime} where bannerId=#{bannerId}
	</update>
	<!-- 删除 -->
	<delete id="delete">
		delete from cmfz_banner where bannerId=#{bannerId}
	</delete>
	<!-- 查所有 -->
	<select id="queryAll" resultType="com.baizhi.entity.Banner">
		select * from cmfz_banner 
	</select>
	<insert id="insert">
		insert into cmfz_banner values(#{bannerId},#{bannerTitle},#{bannerPath},#{bannerStatus},#{bannerCreateTime})
	</insert>
</mapper>
