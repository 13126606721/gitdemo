<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.baizhi.dao.UserDao">
	<select id="queryAll" resultType="com.baizhi.entity.User">
		select * from cmfz_user
	</select>
	<update id="update">
		update cmfz_user set userStatus=#{userStatus} where userId=#{userId}
	</update>
	
	<update id="updateMD5">
		update cmfz_user set userPassword=#{userPassword} where userId=#{userId}
	</update>
	 
	 <insert id="insert">
	 	insert into cmfz_user values(#{userPhone},#{userName},#{userPassword},#{userDharmaName},#{userSex},#{userSign},#{userProfile},#{userProvince},#{userCity},#{userStatus})
	 </insert>
	 <select id="selectByName" resultType="com.baizhi.entity.User">
	 	select * from cmfz_user where userName=#{userName} or userPassword=#{userPassword} 
	 </select>
</mapper>
