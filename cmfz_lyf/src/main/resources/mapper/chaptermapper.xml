<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.baizhi.dao.ChapterDao">
	
	
 	<select id="count" resultType="Integer">
 		select count(*) from cmfz_chapter where albumId=#{id}
 	</select>
 	
 	<insert id="insert">
 		insert into cmfz_chapter values(#{chapterId},#{chapterTitle},#{chapterSize},#{chapterDuration},#{chapterDownloadPath},#{chapterUploadDate},#{album.albumId})
 	</insert>
 	<delete id="delete">
 		delete from cmfz_chapter where albumId=#{id}
 	</delete>	
</mapper>
